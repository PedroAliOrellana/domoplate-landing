---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Google Fonts for MD3 (Roboto provided as default, but let's grab Inter/Roboto) -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-background text-on-background min-h-screen flex flex-col items-center">
		<!-- Mobile-first container: starts at 100% width, max-width constraints on larger screens if needed, 
		     but MD3 often uses full width on mobile. 
		     We'll use a wrapper for content that centers it on large screens. -->
		<div class="w-full max-w-[1440px] flex-1 flex flex-col relative overflow-hidden bg-surface">
			<slot />
		</div>
	</body>
</html>