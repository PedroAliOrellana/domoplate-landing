<nav class="bg-surface text-on-surface shadow-sm sticky top-0 z-50">
  <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Logo / Brand -->
      <div class="flex items-center">
        <a href="/" class="text-title-large font-bold text-primary">Brand</a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center space-x-4">
        <a href="/" class="text-label-large hover:text-primary transition-colors px-3 py-2 rounded-md">Home</a>
        <a href="/about" class="text-label-large hover:text-primary transition-colors px-3 py-2 rounded-md">About</a>
        <a href="/services" class="text-label-large hover:text-primary transition-colors px-3 py-2 rounded-md">Services</a>
        <a href="/contact" class="text-label-large hover:text-primary transition-colors px-3 py-2 rounded-md">Contact</a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="flex items-center md:hidden">
        <button id="mobile-menu-btn" type="button" class="inline-flex items-center justify-center p-2 rounded-md text-on-surface hover:text-primary hover:bg-surface-variant focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <!-- Icon when menu is closed. -->
          <svg id="menu-icon-closed" class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <!-- Icon when menu is open. -->
          <svg id="menu-icon-open" class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu, show/hide based on menu state. -->
  <div class="hidden md:hidden bg-surface-variant" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a href="/" class="block px-3 py-2 rounded-md text-base font-medium text-on-surface-variant hover:text-primary hover:bg-white/10">Home</a>
      <a href="/about" class="block px-3 py-2 rounded-md text-base font-medium text-on-surface-variant hover:text-primary hover:bg-white/10">About</a>
      <a href="/services" class="block px-3 py-2 rounded-md text-base font-medium text-on-surface-variant hover:text-primary hover:bg-white/10">Services</a>
      <a href="/contact" class="block px-3 py-2 rounded-md text-base font-medium text-on-surface-variant hover:text-primary hover:bg-white/10">Contact</a>
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const iconClosed = document.getElementById('menu-icon-closed');
  const iconOpen = document.getElementById('menu-icon-open');

  if (btn && menu && iconClosed && iconOpen) {
    btn.addEventListener('click', () => {
      const isExpanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!isExpanded));
      
      menu.classList.toggle('hidden');
      iconClosed.classList.toggle('hidden');
      iconOpen.classList.toggle('hidden');
    });
  }
</script>