---
import Button from './Button.astro';

interface Props {
  headline?: string;
  subhead?: string;
  ctaText?: string;
  ctaLink?: string;
}

const { 
  headline = "Gestiona tu restaurante con inteligencia", 
  subhead = "Optimiza costos, automatiza pedidos y escala tu negocio de comida con Domoplate.",
  ctaText = "Empieza Ahora",
  ctaLink = "#lead-form"
} = Astro.props;
---

<section class="relative w-full px-4 py-16 md:py-24 lg:py-32 flex flex-col items-center text-center gap-6 bg-surface overflow-hidden">
  <!-- Decorative background elements -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10 opacity-30 pointer-events-none">
    <div class="absolute -top-[20%] -right-[10%] w-[60%] h-[60%] rounded-full bg-tertiary-container blur-3xl"></div>
    <div class="absolute top-[40%] -left-[10%] w-[50%] h-[50%] rounded-full bg-secondary-container blur-3xl"></div>
  </div>

  <div class="max-w-[800px] flex flex-col items-center gap-6 z-10">
    <h1 class="text-display-small md:text-display-large font-extrabold tracking-tight text-on-surface">
      {headline}
    </h1>
    <p class="text-body-large md:text-headline-small text-on-surface-variant max-w-2xl">
      {subhead}
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 mt-4 w-full sm:w-auto">
      <Button variant="filled" href={ctaLink} class="w-full sm:w-auto">{ctaText}</Button>
      <Button variant="outlined" href="#calculator" class="w-full sm:w-auto">Calcular Ahorro</Button>
    </div>
  </div>
</section>